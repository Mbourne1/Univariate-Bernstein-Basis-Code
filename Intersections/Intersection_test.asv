function [] = Intersection_test()

syms x

f_root_mult_arr = [...
    (x - 0.2) 4;
    (x + 0.1) 2
    ] ;
g_root_mult_arr = [...
    (x - 0.2)   4
    (x + 0.5)   2
    ];


fx = BuildPolyFromRootsSymbolic(f_root_mult_arr);
gx = BuildPolyFromRootsSymbolic(g_root_mult_arr);


% Plot from Bernstein form
PlotPolys(fx,gx)

% Plot from symbolic power basis form
fx_sym = GetSymbolicPolyFromSymbolicRoots(f_root_mult_arr);
PlotImplicitPolys(f_root_mult_arr,);




end


function PlotPolys(fx,gx)


m = GetDegree(fx);
xVec = 0:(1/m):1;
arrCP{1} = [xVec; fx'];

n = GetDegree(gx);
xVec = 0:(1/n):1;
arrCP{2} = [xVec; gx'];

Plot2DBezier(arrCP);


end